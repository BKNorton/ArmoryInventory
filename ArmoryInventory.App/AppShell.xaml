<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ArmoryInventory.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ArmoryInventory.App.Views"
    xmlns:local="clr-namespace:ArmoryInventory.App"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.TitleColor="White"
    Title="Armory Inventory">

    <TabBar>
        <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="InventoryMainPage" />

        <ShellContent
        Title="Missions"
        ContentTemplate="{DataTemplate views:MissionsPage}"
        Route="MissionsPage" />

        <ShellContent
        Title="Retrans"
        ContentTemplate="{DataTemplate views:RetransPage}"
        Route="MissionsPage" />
    </TabBar>

</Shell>
